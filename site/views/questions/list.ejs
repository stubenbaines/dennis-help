<% include ../shared/header %>
<div class="row">
    <h1><%= title %></h1>
</div>
<div class="row">
    <table class="striped rounded">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Tags</th>
            </tr>
        </thead>
        <tbody>
        <% for(var i = 0; i < questions.length; i++)  { %>
            <tr>
        		<td><a href="/questions/<%= questions[i]._id %>"><%= questions[i]._id %></a></td>
        		<td><a href="/questions/<%= questions[i]._id %>"><%= questions[i].title %></a></td>
        		<td><%= questions[i].body %></td>
        		<td><%= questions[i].tags %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<% include ../shared/footer %>
